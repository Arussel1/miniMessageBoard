extends layout

block content
  h1(class="title")= title
  p Hi everyone! Welcome to FFA(Free for all) chat room. You are free to send any message. Remember to follow the rule!
  each message in messages
    div(class="container")
      p(class="messages")= message.message
    p #{message.name} at #{message.added.toLocaleString()}
  button(onclick="redirectToSendMessage()" class="button") Send a message

  script.
    function redirectToSendMessage() {
        window.location.href = '/new'; 
    }